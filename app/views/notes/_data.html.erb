<% if @notes.empty? %>
  <tr>
    <td align="center" class="msg">No Notes Found!</td>
  </tr>
<% else %>
  <% @notes.each do |note| %>
  <tr>
    <td>
      Title: <b><%= link_to note.title, note_comments_path(note.id), remote: true , class: :link, action: :replace  %></b>
      <% if note.is_important then %>
        <%= link_to change_importance_path(note.id, 'false'), remote: true, title: "Remove from important notes" do %>
          <i class="fa fa-heart" style="color:#ff0000; float:right;font-size:20px"></i>
        <% end %>
      <% else %>
        <%= link_to change_importance_path(note.id, 'true'), remote: true, title: "Make note important" do %>
          <i class="fa fa-heart" style="color:#696969; font-size:20px; float:right"></i>
        <% end %>
      <% end %>
      <br>
      <%= link_to 'Edit' , edit_note_path(note.id), remote: :true, class: :link, action: :replace %> |
      <%= link_to 'Delete', note_path(note), method: :delete, remote: :true, data: { confirm: 'Do you want to delete' }, class: :link %> |
      <%= link_to 'New Comment', new_note_comment_path(note.id), remote: :true, class: :link %> |
      <%= link_to new_share_path(note_id:note), remote: true, title: "Share this note" do %>
        <i class="fa fa-share-alt" style="color:#696969; font-size:20px"></i>
      <% end %>
    </td>
  </tr>
  <% end %> <!-- end of do loop -->

<% end %> <!-- end of if -->
