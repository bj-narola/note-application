<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-6">
        <h5><u><b><%= @note.title %></b></u></h5>
        <pre><%= @note.description %></pre>
        <u>Note Owner : <%= @note.user.name %></u><br>
      </div>
      <div class="col-lg-6" align="right">
        <%= link_to 'Add New Comment', new_note_comment_path(@note), remote: :true, class: "btn btn-info" %>
      </div>
    </div>
  </div>
</div>
<hr>
<% if @note.comments.empty? %>
  <center class="msg">No Comments Added Yet For <%= @note.title %> !!<center>
<% else %>
    <div class="col-lg-12">
      <% @comments.each do |comment| %>
      <div class="row">
        <b><%= if comment.user.name==current_user.name then "You" else comment.user.name end %></b>&nbsp; commented on &nbsp; <b><%= comment.created_at.strftime("%d-%m-%Y") %></b>
      </div>
      <div class="row">
        <%= comment.description %>
      </div>
      <hr>
      <% end %>
      <center><%= will_paginate @comments, remote: true %></center>
    </div>
<% end %>
