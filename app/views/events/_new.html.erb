<!-- The Modal -->
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Create Event</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <!-- Modal body -->
      <%= form_tag({controller: "events", action: "create"}, method: "post",remote: true) do %>
      <div class="modal-body">
          Event Title :
          <%= text_field :event, :name, class: "form-control", required: true %>
          Event Description :
          <%= text_area :event, :description, class: "form-control", required: true, cols: 80, rows: 8 %>
          Event Start Date :
          <%= datetime_field :event, :start_date, class: "form-control", required: true   %>
          Event End Date :
          <%= datetime_field :event, :end_date, class: "form-control", required: true   %>
      </div>
      <!-- Modal footer -->
      <div class="modal-footer">
          <input type="submit" value="Add Event" class="btn btn-info">
          <input type="button" value="cancel" class="btn btn-default" data-dismiss="modal">
      </div>
      <% end %>
    </div>
  </div>
</div>
