<!-- The Modal -->

  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Create Event</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <!-- Modal body -->
      <%= form_tag({controller: "events", action: "create"}, method: "post",remote: true) do %>
      <div class="modal-body">
          Event Title :
          <input type="text" name="event_name" value="" class="form-control">
          Event Description :
          <textarea name="event_description" rows="8" cols="80" class="form-control"></textarea>
          Event Start Date :
          <input type="date" name="event_start_date" value="" class="form-control"><br>
          Event End Date :
          <input type="date" name="event_end_date" value="" class="form-control"><br>
      </div>
      <!-- Modal footer -->
      <div class="modal-footer">
          <input type="submit" name="" value="Add Event" class="btn btn-info">
          <input type="reset" name="" value="Reset" class="btn btn-default" data-dismiss="modal">
      </div>
      <% end %>
    </div>
  </div>
</div>
